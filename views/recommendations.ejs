<!DOCTYPE html>
<html lang="en">
  <%- include("partials/recommendation-header.ejs") %>

  <body class="text-light">
    <%- include("partials/nav.ejs") %>
    <!-- Hero Section with Background Video -->
    <header
      class="hero position-relative d-flex align-items-center justify-content-center text-center"
    >
      <video
        class="hero-video"
        autoplay
        muted
        loop
        playsinline
        poster="/images/greens-poster.jpg"
      >
        <source src="/videos/vid2.mp4" type="video/mp4" />
      </video>
      <div class="hero-overlay"></div>

      <div class="container position-relative hero-content py-5">
        <h1 class="display-5 fw-bold text-hero reveal">
          Discover <span class="accent">Recipes</span> You’ll Love
        </h1>
        <p class="lead text-hero-subtle reveal">
          Choose your preferred cuisine and language — let AI surprise you with
          world recipes!
        </p>

        <div class="selector-box justify-content-center mt-4 reveal">
          <form
            id="recipeForm"
            class="d-flex flex-wrap justify-content-center gap-3"
          >
            <select id="countrySelect" class="form-select" required>
              <option value="" disabled selected>Select a Cuisine</option>
              <option value="Mix">Mix (Random)</option>
              <option value="Italy">Italy</option>
              <option value="Japan">Japan</option>
              <option value="Mexico">Mexico</option>
              <option value="India">India</option>
              <option value="France">France</option>
              <option value="Morocco">Morocco</option>
              <option value="USA">USA</option>
              <option value="China">China</option>
              <option value="Greece">Greece</option>
              <option value="Brazil">Brazil</option>
            </select>

            <select id="languageSelect" class="form-select" required>
              <option value="" disabled selected>Select Language</option>
              <option value="English">English</option>
              <option value="Spanish">Spanish</option>
              <option value="French">French</option>
              <option value="German">German</option>
              <option value="Chinese">Chinese</option>
              <option value="Portuguese">Portuguese</option>
              <option value="Russian">Russian</option>
            </select>

            <button id="recommendBtn" class="btn btn-generate">
              <i class="bi bi-magic me-1">Generate Recipes</i>
            </button>
          </form>
        </div>
      </div>
    </header>
    <!-- Results Section -->
    <section id="generate" class="container py-5">
      <div id="recipesContainer" class="mt-4 text-center">
        <p class="text-white initial-message">
          No recipes yet. Select a cuisine and language above to start!
        </p>
      </div>
    </section>
    <%- include("partials/chat-bot.ejs") %>
  </body>
</html>
