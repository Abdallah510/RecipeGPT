<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Food Recommendations</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/home.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/home.js"></script>
  </head>

  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
      <div class="container">
        <a class="navbar-brand" href="/">FoodAI</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link active" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/recommendations">Recommendations</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/about">About</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <!-- Hero Section -->
    <header class="text-center py-5">
      <div class="container">
        <h1 class="display-4">Welcome to FoodAI</h1>
        <p class="lead">
          Get personalized food recommendations with images and descriptions
          powered by AI!
        </p>
        <a href="#recommendations" class="btn btn-primary btn-lg mt-3"
          >See Recommendations</a
        >
      </div>
    </header>
    <!-- AI Recommendation Section -->
    <section class="container my-5">
      <h2 class="text-center mb-3 rec-header">Your AI Food Recommendations</h2>
      <div class="row justify-content-center">
        <div class="col-md-8 mb-4">
          <div class="card card-modern p-4 text-center">
            <div class="mb-3">
              <h5 class="fw-bold">Enter Your Ingredients</h5>
              <p class="text-muted">
                Type your ingredients below or upload a photo for AI suggestions
              </p>
            </div>
            <form class="mb-3">
              <input
                id="chat"
                type="text"
                class="form-control mb-3"
                placeholder="e.g., tomato, cheese, basil"
                required
              />
              <button id="ask" type="submit" class="btn btn-primary">
                Get Recommendations
              </button>
            </form>
            <form enctype="multipart/form-data">
              <input
                type="file"
                class="form-control mb-3"
                id="imageInput"
                accept="image/*"
              />
              <button type="submit" class="btn btn-outline-primary">
                Upload Photo
              </button>
            </form>
          </div>
        </div>
      </div>

      <!-- Output area -->
      <div class="card card-modern p-4 text-left">
        <div id="aiResults" class="mt-4"></div>
      </div>
    </section>
  </body>
</html>
