<!DOCTYPE html>
<html lang="en">
    <%- include("partials/home-header.ejs") %>
  <body>
    <!-- Navbar -->
   <%- include("partials/nav.ejs") %>
    <!-- Hero Section -->
    <header class="text-center py-5">
      <div class="container">
        <h1 class="display-4">Welcome to RecipeGPT</h1>
        <p class="lead">
          Get personalized food recommendations with images and descriptions
          powered by AI!
        </p>
        <a href="#recommendations" class="btn btn-primary btn-lg mt-3"
          >See Recommendations</a
        >
      </div>
    </header>
    <!-- AI Recommendation Section -->
    <section class="container my-5">
      <h2 class="text-center mb-3 rec-header">Your AI Food Recommendations</h2>
      <!-- Output area -->
      <div id="outputBox" class="card card-modern p-4 text-left" hidden>
        <div id="aiResults" class="mt-4"></div>
      </div>
      <div class="row justify-content-center">
        <div class="col-md-8 mb-4">
          <div class="card card-modern p-4 text-center">
            <div class="mb-3">
              <h5 class="fw-bold">Enter Your Ingredients</h5>
              <p class="text-muted">
                Type your ingredients below or upload a photo for AI suggestions
              </p>
            </div>
            <form class="mb-3">
              <input
                id="chat"
                type="text"
                class="form-control mb-3"
                placeholder="e.g., tomato, cheese, basil"
                required
              />
              <button id="ask" type="submit" class="btn btn-primary">
                Get Recommendations
              </button>
            </form>
            <form enctype="multipart/form-data">
              <input
                type="file"
                class="form-control mb-3"
                id="imageInput"
                accept="image/*"
              />
              <button type="submit" class="btn btn-outline-primary">
                Upload Photo
              </button>
            </form>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>
